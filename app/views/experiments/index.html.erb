<% @orange_left="Project: " + @project.name %>
<% @orange_right="List of the experiments" %>
<% @origine = "index" %>



<%= render :partial => "heatfoot", :locals => { :origin => @origine } %>

<p style="color: green"><%= flash[:notice] %> </p>

<table width="100%" cellspacing="0" > 
<% odd_or_even = 0 %>
<% for experiment in @experiments
odd_or_even = 1 - odd_or_even %>
<tr class="item<%= odd_or_even %>">
	<td class='exp_index_italic' id="exp_index_date"> 
	Performed: <%=h experiment.date_exp %> <br>
	Updated: <%=h experiment.last_update %> </td>
	<td rowspan="2" style="border-top:1px solid blue;">
					  <p class="exp_index_normal" align="center"> <b> <%=h experiment.title %> </b> 
					  <hr style="width:300px;color:black;">
                      </p>
	                  <p class="exp_index_normal"> <b> Goal: </b><%=h experiment.goal %> </p>
					  <p class="exp_index_normal"> <b> Conclusion: </b><%=h experiment.conclusion %> </p>
					  <p align="right" class="exp_index_link"> <%= link_to 'Details', {:action => 'detail_frame_form', :id => experiment} , {:style => 'color:blue;'} %> - 
	                                                             <%= link_to 'Edit', {:action => 'edit_frame_form', :id=> experiment}, {:style => 'color:blue;'} %> - 
                                                                 <%= link_to 'Destroy', { :action => 'destroy', :id => experiment}, {:confirm => 'Are you sure? This will remove this experiment and all children experiments. Set the historical empty if you want to remove this experiment only.', :method => :delete, :style => 'color:blue;'}  %>
	</td>
</tr>

<tr class="item<%= odd_or_even %>"> <td class="exp_index_italic" > Type : <% if experiment.typexp == nil %>
	                Type deleted
	             <% else %> <%=h experiment.typexp.name %>
     	         <%end%> </td></tr>

<% end %>
</table>


<br />

<%= render :partial => "heatfoot", :locals => { :origin => @origine } %>

