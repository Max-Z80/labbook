<% @orange_left="Project: " + @project.name %>
<% @orange_right="Documentation" %>
<% @origine = "index" %>


<%= render :partial => "heatfoot", :locals => { :origin => @origine } %>

<p style="color: green"><%= flash[:notice] %> </p>

<table width="100%" cellspacing="0" > 
<% odd_or_even = 0 %>
<% for documentation in @documentations
odd_or_even = 1 - odd_or_even %>
<tr class="item<%= odd_or_even %>">
	<td class='exp_index_italic' id="exp_index_date"> 
	Updated: <%=h documentation.last_update %> </td>
	<td rowspan="2" style="border-top:1px solid blue;">
					  <p class="exp_index_normal" align="center"> <b> <%=h documentation.title %> </b> 
					  <hr style="width:300px;color:black;">
                      </p>
	                  <p class="exp_index_normal"> <b> Authors: </b><%=h documentation.author %> </p>
					  <p class="exp_index_normal"> <b> Source: </b><%=h documentation.source %> </p>
					  <p align="right" class="exp_index_link"> <%= link_to 'Details', {:action => 'detail_frame_form', :id => documentation} , {:style => 'color:blue;'} %> - 
	                                                             <%= link_to 'Edit', {:action => 'edit_frame_form', :id => documentation}, {:style => 'color:blue;'} %> - 
                                                                 <%= link_to 'Destroy', {:action => 'destroy', :id => documentation }, {:confirm => 'Are you sure?', :method => :delete, :style => 'color:blue;'}  %>
	</td>
</tr>

<tr class="item<%= odd_or_even %>"> 
<td class="exp_index_italic" > Year : <%= documentation.year.year %> </td>
</tr>

<% end %>
</table>


<br />

<%= render :partial => "heatfoot", :locals => { :origin => @origine } %>

